{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "composite": true, 
      "declaration": true,
      "esModuleInterop": true
    },
    "include": [
      "src/**/*",
      "tests/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  