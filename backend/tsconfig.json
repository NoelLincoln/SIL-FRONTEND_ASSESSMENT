{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "composite": true, 
      "declaration": true,
      "esModuleInterop": true,
      "types": ["jest"]
    },
    "include": [
      "src/**/*", "tests/__mocks__","tests/**/*.d.ts"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "tests/**/*",
    "**/*.test.ts"
    ]
  }
  