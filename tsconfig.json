{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./dist", // Set the output directory for transpiled JS files
    "baseUrl": ".", // Make sure the base URL is set to the root
    "strict": true,
    "types": ["node"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES6",
    "lib": ["ES6", "DOM"],
    "skipLibCheck": true
  },
  "include": [
    "client/src/**/*", // Include the client files
    "backend/src/**/*", // Include the backend files
    "client/tailwind.config.ts",
    "client/vite.config.ts",
    "client/vite-env.d.ts"
, "backend/tests/__mocks__"  ],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "./backend/tsconfig.json"
    }
  ]
}
