{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/vite",
        "config": {
          "outputDirectory": "client/dist"
        }
      },
      {
        "src": "backend/package.json",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/api/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/client/$1"
      }
    ]
  }
  